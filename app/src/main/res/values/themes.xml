<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AxonBLEController" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/cyber_green</item>
        <item name="colorPrimaryVariant">@color/cyber_dim</item>
        <item name="colorOnPrimary">@color/cyber_background</item>
        <item name="colorSecondary">@color/cyber_cyan</item>
        <item name="colorSecondaryVariant">@color/cyber_magenta</item>
        <item name="colorOnSecondary">@color/cyber_background</item>
        <item name="android:colorBackground">@color/cyber_background</item>
        <item name="android:statusBarColor">@color/cyber_background</item>
        <item name="android:navigationBarColor">@color/cyber_background</item>
        <item name="android:textColorPrimary">@color/cyber_green</item>
        <item name="android:textColorSecondary">@color/cyber_dim</item>
    </style>

    <style name="CyberButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/cyber_green</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="strokeColor">@color/cyber_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="CyberButtonActive" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/cyber_background</item>
        <item name="backgroundTint">@color/cyber_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>
